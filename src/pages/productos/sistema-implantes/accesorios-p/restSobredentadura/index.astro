---
import Layout from "../../../../../layouts/Layout.astro";
import { pilarS1TD } from "../restSobredentadura/restSobredentaduraData.astro";
import a1dANALOG from "../../../../../assets/Productos/implantes/a1dAnalog.png";
---

<Layout title="Restauración Sobredentadura - Accesorios Protésicos - Dait Import">
    <section class="w-full flex flex-col items-center py-8 px-4 text-white bg-[#001037]">
        <div class="w-full text-2xl border-b text-center py-4">
            <h2>Restauración Sobredentadura</h2>
        </div>
        <div class="flex flex-wrap w-[90%] justify-center gap-12 py-8">
            <a href="/productos/sistema-implantes/accesorios-p/restSobredentadura/accesoriosPelotas" class="w-[30%]">
                <img src={a1dANALOG.src} alt="" class="rounded w-full h-auto" />
            </a>
            <a href="/productos/sistema-implantes/accesorios-p/restSobredentadura/pilaresSmartLock" class="w-[30%]">
                <img src={a1dANALOG.src} alt="" class="rounded w-full h-auto" />
            </a>
            <a href="/productos/sistema-implantes/accesorios-p/restSobredentadura/pilaresEasyFix" class="w-[30%]">
                <img src={a1dANALOG.src} alt="" class="rounded w-full h-auto" />
            </a>
        </div>
        <div class="flex flex-wrap w-[90%] border-t gap-12 py-8">
            {pilarS1TD.map((product) => (
                <div class="flex w-full md:w-[45%] gap-6 flex-col md:flex-row items-center">
                    <div>
                        <img src={product.image} alt={product.title} class="rounded w-full h-auto" />
                    </div>
                    <div class="flex flex-col gap-2">
                        <h2 class="text-xl font-semibold">{product.title}</h2>
                        <span>{product.description}</span>
                        <div class="flex flex-col gap-1">
                            <div><span class="font-semibold">Tipo de Conexión: </span>{product.connectionType}</div>
                            <div><span class="font-semibold">Material: </span>{product.material}</div>
                            <div><span class="font-semibold">Tallas/Longitudes: </span>{product.sizes}</div>
                            <div><span class="font-semibold">Instrucciones: </span>{product.instructions}</div>
                        </div>
                    </div>
                </div>
            ))}
        </div>
    </section>
</Layout>
