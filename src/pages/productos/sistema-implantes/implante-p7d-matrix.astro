---
// Page1.astro
import Layout from "../../../layouts/Layout.astro";
import ImplanteSeccion from "../../productos/sistema-implantes/ImplanteSeccion.astro"
import p7dM from "../../../assets/Productos/implantes/P7D_rotating.gif";
import bannerLogo from "../../../assets/Productos/implantes/implante_logos_banner.png";

const title = "P7D";
const subtitle = "Implante";
const description = "Implante de rosca agresiva, beneficioso para tipos óseos D3, D4 y D5 con alta estabilidad del primer, con plataforma Shift y conexión cónica.";
const features = [
    "– Excelente estabilidad primaria",
    "– Cambio de plataforma",
    "– Carga inmediata",
    "– Superficie de primera calidad",
];

const fichaLink = "/productos/sistema-implantes/p5d-ficha";
const cotizarLink = "/productos/sistema-implantes/p5d-cotizacion";
---

<Layout title="Implante P7D - Sistema de Implantes">
    <ImplanteSeccion
        title={title}
        subtitle={subtitle}
        imageSrc={p7dM.src}
        bannerImage={bannerLogo.src}
        description={description}
        features={features}
        fichaLink={fichaLink}
        cotizarLink={cotizarLink}
    />
</Layout>
