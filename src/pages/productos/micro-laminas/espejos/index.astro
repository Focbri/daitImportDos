---
import mr1 from "../../../../assets/Productos/microlaminas/mr1.png";
import mr2 from "../../../../assets/Productos/microlaminas/mr2.png";
import mr3 from "../../../../assets/Productos/microlaminas/mr3.png";
import mr6 from "../../../../assets/Productos/microlaminas/mr6.png";
import Layout from "../../../../layouts/Layout.astro";

// Array de productos
const productos = [
  { id: 1, nombre: "MR1", descripcion: "Redondo, 5 mm, en ángulo de 30°", imagen: mr1.src, enlace: "https://wa.me/51920341943?text=Hola,%20me%20puede%20brindar%20más%20información%20sobre%20Espejos%20MR1" },
  { id: 2, nombre: "MR2", descripcion: "Redondo, 3 mm, en ángulo de 30°", imagen: mr2.src, enlace: "https://wa.me/51920341943?text=Hola,%20me%20puede%20brindar%20más%20información%20sobre%20Espejos%20MR2" },
  { id: 3, nombre: "MR3", descripcion: "Lados rectos, medianos, en ángulo de 30°", imagen: mr3.src, enlace: "https://wa.me/51920341943?text=Hola,%20me%20puede%20brindar%20más%20información%20sobre%20Espejos%20MR3" },
  { id: 4, nombre: "MR6", descripcion: "Lados rectos, grandes, en ángulo de 30°", imagen: mr6.src, enlace: "https://wa.me/51920341943?text=Hola,%20me%20puede%20brindar%20más%20información%20sobre%20Espejos%20MR6" }
];
---

<Layout title="Micro Láminas">
  <section class="h-full flex flex-col items-center lg:gap-8 gap-6 w-full bg-[#001037] border-t border-[#282828] lg:py-16 py-8">
    <h2 class="lg:text-5xl text-3xl border-b text-[#fff] w-[80%] text-center">Espejos</h2>

    <div class="grid grid-cols-2 lg:grid-cols-4 gap-4 lg:py-10 lg:w-[80%] w-[90%]">
        <!-- Bucle Astro para productos -->
        {productos.map((producto) => (
          <div class="flex flex-col text-[#00c1af] w-full">
            <a href={producto.enlace} target="_blank" class="w-full transition-transform duration-300 ease-in-out transform hover:scale-105">
              <img src={producto.imagen} alt={producto.nombre} class="rounded-lg"/>
            </a>
            <div class="flex justify-center flex-col py-4 w-full">
              <h4 class="lg:text-xl text-lg font-bold w-full text-center">{producto.nombre}</h4>
              <span class="text-[#adadad] text-base">{producto.descripcion}</span>
            </div>
          </div>
        ))}
      </div>
      
  </section>
</Layout>
