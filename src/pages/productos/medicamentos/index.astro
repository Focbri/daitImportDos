---
import lidocaina2P from "../../../assets/Productos/medicamentos/lidocaina2P.png";
import mepivacaina3P from "../../../assets/Productos/medicamentos/mepivacaina3P.png";
import benzocainaGel from "../../../assets/Productos/medicamentos/benzocainaGel.png";
import ketorolaco10ML from "../../../assets/Productos/medicamentos/ketorolaco10ML.png";
import ketorolaco60ML from "../../../assets/Productos/medicamentos/ketorolaco60ML.png";
import dexametasona4MG from "../../../assets/Productos/medicamentos/dexametasona4MG.png";
import Layout from "../../../layouts/Layout.astro";

// Array de productos
const productos = [
  { id: 1, nombre: "Lidocaína 2%-Cartucho de vidrio", imagen: lidocaina2P.src, enlace: "/productos/micro-laminas/manijas-pinzas" },
  { id: 2, nombre: "Mepivacaina 3%-Cartucho de vidrio", imagen: mepivacaina3P.src, enlace: "/productos/micro-laminas/cuchillas-miniatura" },
  { id: 3, nombre: "Benzocaína en Gel", imagen: benzocainaGel.src, enlace: "/productos/micro-laminas/micro-cuchillas-miniatura" },
  { id: 4, nombre: "Ketorolaco 10ml tabletas", imagen: ketorolaco10ML.src, enlace: "/productos/micro-laminas/espejos" },
  { id: 5, nombre: "ketorolaco de 60mg / 2ml ampolla", imagen: ketorolaco60ML.src, enlace: "/productos/micro-laminas/espejos" },
  { id: 6, nombre: "Dexametasona 4mg / 2ml", imagen: dexametasona4MG.src, enlace: "/productos/micro-laminas/espejos" }
];
---

<Layout title="Medicamentos">
  <section class="h-full flex flex-col items-center lg:gap-8 gap-6 w-full bg-[#001037] border-t border-[#282828] lg:py-16 py-8">
    <h2 class="lg:text-5xl border-b text-3xl text-[#fff] w-[80%] text-center">Medicamentos</h2>

    <div class="grid grid-cols-2 lg:grid-cols-4 gap-4 lg:py-10 lg:w-[80%] w-[90%]">
        <!-- Bucle Astro para productos -->
        {productos.map((producto) => (
          <div class="flex flex-col text-[#00c1af] w-full">
            <a href={producto.enlace} class="w-full transition-transform duration-300 ease-in-out transform hover:scale-105">
              <img src={producto.imagen} alt={producto.nombre} class="rounded-lg"/>
            </a>
            <div class="flex justify-center flex-col py-4 w-full">
              <h4 class="lg:text-xl text-lg font-bold w-full text-center">{producto.nombre}</h4>
            </div>
          </div>
        ))}
      </div>
      
  </section>
</Layout>
